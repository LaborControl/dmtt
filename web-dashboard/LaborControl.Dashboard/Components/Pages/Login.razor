@page "/login"
@using LaborControl.Dashboard.Services
@inject ApiClient ApiClient
@inject NavigationManager Navigation

<PageTitle>Connexion - DMTT Dashboard</PageTitle>

<div class="login-container">
    <div class="login-card">
        <div class="login-header">
            <div class="logo">LC</div>
            <h1>Labor Control DMTT</h1>
            <p>Tableau de bord - Tricastin</p>
        </div>

        @if (!string.IsNullOrEmpty(errorMessage))
        {
            <div class="alert alert-danger">
                @errorMessage
            </div>
        }

        <EditForm Model="loginModel" OnValidSubmit="HandleLogin">
            <div class="form-group mb-3">
                <label class="form-label">Email</label>
                <input type="email" class="form-control" @bind="loginModel.Email" placeholder="votre@email.com" required />
            </div>

            <div class="form-group mb-4">
                <label class="form-label">Mot de passe</label>
                <input type="password" class="form-control" @bind="loginModel.Password" placeholder="********" required />
            </div>

            <button type="submit" class="btn btn-purple w-100" disabled="@isLoading">
                @if (isLoading)
                {
                    <span class="spinner-border spinner-border-sm me-2"></span>
                    <span>Connexion...</span>
                }
                else
                {
                    <span>Se connecter</span>
                }
            </button>
        </EditForm>

        <div class="login-footer">
            <small>Accès réservé au personnel autorisé</small>
        </div>
    </div>
</div>

@code {
    private LoginModel loginModel = new();
    private bool isLoading = false;
    private string? errorMessage;

    private async Task HandleLogin()
    {
        isLoading = true;
        errorMessage = null;

        try
        {
            var result = await ApiClient.LoginAsync(loginModel.Email, loginModel.Password);

            if (result?.Token != null)
            {
                Navigation.NavigateTo("/", forceLoad: true);
            }
            else
            {
                errorMessage = "Email ou mot de passe incorrect";
            }
        }
        catch (Exception ex)
        {
            errorMessage = "Erreur de connexion au serveur";
        }
        finally
        {
            isLoading = false;
        }
    }

    private class LoginModel
    {
        public string Email { get; set; } = string.Empty;
        public string Password { get; set; } = string.Empty;
    }
}

