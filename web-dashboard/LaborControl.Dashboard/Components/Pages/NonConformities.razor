@page "/non-conformities"
@using LaborControl.Dashboard.Services
@inject ApiClient ApiClient

<PageTitle>Non-Conformités - DMTT</PageTitle>

<div class="page-content">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="text-white mb-1">Non-Conformités (FNC)</h1>
            <p class="text-slate-400 mb-0">Gestion des fiches de non-conformité</p>
        </div>
        <button class="btn btn-danger">
            <span>+</span> Nouvelle FNC
        </button>
    </div>

    <!-- Statistics Row -->
    <div class="row g-3 mb-4">
        <div class="col-md-2">
            <div class="stat-mini bg-danger">
                <div class="stat-value">@stats.Open</div>
                <div class="stat-label">Ouvertes</div>
            </div>
        </div>
        <div class="col-md-2">
            <div class="stat-mini bg-warning">
                <div class="stat-value">@stats.InAnalysis</div>
                <div class="stat-label">En analyse</div>
            </div>
        </div>
        <div class="col-md-2">
            <div class="stat-mini bg-info">
                <div class="stat-value">@stats.PendingAction</div>
                <div class="stat-label">Action requise</div>
            </div>
        </div>
        <div class="col-md-2">
            <div class="stat-mini bg-purple">
                <div class="stat-value">@stats.InProgress</div>
                <div class="stat-label">En cours</div>
            </div>
        </div>
        <div class="col-md-2">
            <div class="stat-mini bg-secondary">
                <div class="stat-value">@stats.Verification</div>
                <div class="stat-label">Vérification</div>
            </div>
        </div>
        <div class="col-md-2">
            <div class="stat-mini bg-success">
                <div class="stat-value">@stats.Closed</div>
                <div class="stat-label">Clôturées</div>
            </div>
        </div>
    </div>

    @if (isLoading)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-danger" role="status">
                <span class="visually-hidden">Chargement...</span>
            </div>
        </div>
    }
    else if (errorMessage != null)
    {
        <div class="alert alert-danger">
            @errorMessage
            <button class="btn btn-sm btn-outline-danger ms-3" @onclick="LoadData">Réessayer</button>
        </div>
    }
    else
    {
        <!-- Data Table -->
        <div class="card bg-slate-800 border-0">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-dark table-hover mb-0">
                        <thead class="bg-slate-900">
                            <tr>
                                <th>Référence</th>
                                <th>Type</th>
                                <th>Sévérité</th>
                                <th>Soudure</th>
                                <th>Description</th>
                                <th>Statut</th>
                                <th>Créée le</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (nonConformities.Any())
                            {
                                @foreach (var nc in nonConformities)
                                {
                                    <tr class="@(nc.Severity == "CRITICAL" ? "table-danger-subtle" : "")">
                                        <td>
                                            <span class="fw-bold text-danger">@nc.Reference</span>
                                        </td>
                                        <td>
                                            <span class="badge bg-slate-600">@nc.NCType</span>
                                        </td>
                                        <td>
                                            <span class="badge @GetSeverityClass(nc.Severity)">@nc.Severity</span>
                                        </td>
                                        <td class="text-slate-300">@(nc.WeldReference ?? "-")</td>
                                        <td class="text-slate-400 text-truncate" style="max-width: 200px;">
                                            @nc.Title
                                        </td>
                                        <td>
                                            <span class="badge @GetStatusClass(nc.Status)">@GetStatusLabel(nc.Status)</span>
                                        </td>
                                        <td class="text-slate-400">@nc.CreatedAt.ToString("dd/MM/yyyy")</td>
                                        <td>
                                            <div class="btn-group btn-group-sm">
                                                <button class="btn btn-outline-light btn-sm">Voir</button>
                                                <button class="btn btn-outline-warning btn-sm">IA</button>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="8" class="text-center text-slate-400 py-4">
                                        Aucune non-conformité trouvée
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="card-footer bg-slate-900 border-0">
                <span class="text-slate-400">@nonConformities.Count non-conformité(s)</span>
            </div>
        </div>
    }
</div>

@code {
    private List<NonConformityDto> nonConformities = new();
    private NCStats stats = new();
    private bool isLoading = true;
    private string? errorMessage;

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        isLoading = true;
        errorMessage = null;

        try
        {
            var result = await ApiClient.GetNonConformitiesAsync(null);
            if (result != null)
            {
                nonConformities = result.Items;
            }
            else
            {
                var directResult = await ApiClient.GetAsync<List<NonConformityDto>>("api/nonconformities");
                if (directResult != null)
                {
                    nonConformities = directResult;
                }
            }

            // Calculate stats from data
            stats = new NCStats
            {
                Open = nonConformities.Count(nc => nc.Status == "OPEN"),
                InAnalysis = nonConformities.Count(nc => nc.Status == "ANALYSIS"),
                PendingAction = nonConformities.Count(nc => nc.Status == "PENDING_ACTION"),
                InProgress = nonConformities.Count(nc => nc.Status == "ACTION_IN_PROGRESS"),
                Verification = nonConformities.Count(nc => nc.Status == "PENDING_VERIFICATION"),
                Closed = nonConformities.Count(nc => nc.Status == "CLOSED")
            };
        }
        catch (Exception ex)
        {
            errorMessage = $"Erreur: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private string GetSeverityClass(string severity) => severity?.ToUpper() switch
    {
        "CRITICAL" => "bg-danger",
        "MAJOR" => "bg-warning text-dark",
        "MINOR" => "bg-info",
        _ => "bg-secondary"
    };

    private string GetStatusClass(string status) => status?.ToUpper() switch
    {
        "OPEN" => "bg-danger",
        "ANALYSIS" => "bg-warning text-dark",
        "PENDING_ACTION" => "bg-info",
        "ACTION_IN_PROGRESS" => "bg-purple",
        "PENDING_VERIFICATION" => "bg-secondary",
        "CLOSED" => "bg-success",
        _ => "bg-secondary"
    };

    private string GetStatusLabel(string status) => status?.ToUpper() switch
    {
        "OPEN" => "Ouverte",
        "ANALYSIS" => "En analyse",
        "PENDING_ACTION" => "Action requise",
        "ACTION_IN_PROGRESS" => "En cours",
        "PENDING_VERIFICATION" => "Vérification",
        "CLOSED" => "Clôturée",
        _ => status ?? ""
    };

    private class NCStats
    {
        public int Open { get; set; }
        public int InAnalysis { get; set; }
        public int PendingAction { get; set; }
        public int InProgress { get; set; }
        public int Verification { get; set; }
        public int Closed { get; set; }
    }
}

